<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/win95_gray">

    <!-- Barre de titre Windows 95 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/win95_blue"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:text="Dailymotion Downloader"
        android:textColor="@color/win95_white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:fontFamily="@font/w95fa_font" />

    <!-- Contenu principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Section URL -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lien de la vidéo"
            android:textColor="@color/win95_black"
            android:textSize="14sp"
            android:fontFamily="@font/w95fa_font"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/urlInput"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/win95_inset_border"
            android:hint="Collez le lien Dailymotion ici"
            android:textColorHint="@color/win95_dark_gray"
            android:inputType="textUri"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="@color/win95_black"
            android:textSize="14sp"
            android:fontFamily="@font/w95fa_font"
            android:singleLine="true" />

        <!-- Section Progress -->
        <TextView
            android:id="@+id/progressLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Progress"
            android:textColor="@color/win95_black"
            android:textSize="12sp"
            android:fontFamily="@font/w95fa_font"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

        <!-- Barre de progression Windows 95 -->
        <FrameLayout
            android:id="@+id/progressContainer"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/win95_progress_bg"
            android:visibility="gone">

            <!-- Fond de la progression (bleu) -->
            <View
                android:id="@+id/progressFill"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/win95_progress_fill" />

            <!-- Texte du pourcentage -->
            <TextView
                android:id="@+id/progressText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0%"
                android:textColor="@color/win95_white"
                android:textSize="12sp"
                android:fontFamily="@font/w95fa_font"
                android:textStyle="bold" />

        </FrameLayout>

        <!-- Bouton Télécharger style Windows 95 -->
        <Button
            android:id="@+id/downloadButton"
            android:layout_width="200dp"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/win95_button_selector"
            android:text="Download"
            android:textColor="@color/win95_white"
            android:textSize="12sp"
            android:fontFamily="@font/w95fa_font"
            android:textAllCaps="false" />

        <!-- Message de statut -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/win95_black"
            android:textSize="12sp"
            android:fontFamily="@font/w95fa_font"
            android:visibility="gone" />

        <!-- Séparateur -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp"
            android:background="@color/win95_dark_gray" />

        <!-- Section Historique -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Historique des téléchargements"
            android:textColor="@color/win95_black"
            android:textSize="14sp"
            android:fontFamily="@font/w95fa_font"
            android:layout_marginBottom="8dp" />

        <!-- Liste historique avec bordure enfoncée -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/win95_inset_border">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/historyContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/emptyText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="24dp"
                        android:text="Aucun téléchargement"
                        android:textColor="@color/win95_dark_gray"
                        android:textSize="12sp"
                        android:fontFamily="@font/w95fa_font" />

                </LinearLayout>

            </ScrollView>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
